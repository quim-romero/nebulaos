{
  "name": "nebulaos",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "preview:ci": "vite preview --port=4173 --strictPort",
    "test:unit": "vitest run",
    "a11y:unit": "vitest run src/**/__tests__/*.a11y.test.tsx",
    "smoke": "playwright test tests/smoke.home.spec.ts",
    "a11y:e2e": "playwright test tests/a11y.home.spec.ts",
    "e2e:all": "start-server-and-test \"npm:preview:ci\" http://localhost:4173 \"playwright test tests/smoke.home.spec.ts tests/a11y.home.spec.ts --base-url=http://localhost:4173\"",
    "lhci:collect": "lhci collect",
    "lhci:assert": "lhci assert",
    "lhci": "lhci autorun",
    "test:all": "npm run test:unit && npm run a11y:unit && npm run build && npm run e2e:all && npm run lhci"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.12",
    "gsap": "^3.13.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/js": "^9.30.1",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.54.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.10.3",
    "eslint": "^9.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "lighthouse": "^12.8.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "start-server-and-test": "^2.0.13",
    "tailwindcss": "^3.4.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "vitest": "^3.2.4",
    "vitest-axe": "^0.1.0",
    "wait-on": "^8.0.4"
  }
}
